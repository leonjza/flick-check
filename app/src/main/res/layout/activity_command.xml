<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.flick.flickcheck.CommandActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cmd_output"
        android:minLines="20"
        android:focusableInTouchMode="false"
        android:fontFamily="monospace"
        android:textIsSelectable="true"
        android:scrollbars="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/cmd_lscpu"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/use_ssh" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="free"
        android:id="@+id/cmd_free"
        android:onClick="doCmd"
        android:tag="free"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cmd_w" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="w"
        android:id="@+id/cmd_w"
        android:onClick="doCmd"
        android:tag="w"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ps"
        android:id="@+id/cmd_ps"
        android:onClick="doCmd"
        android:tag="ps"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cmd_free" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dmesg"
        android:id="@+id/cmd_dmesg"
        android:onClick="doCmd"
        android:tag="dmesg"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/cmd_lscpu" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="df"
        android:id="@+id/cmd_df"
        android:onClick="doCmd"
        android:tag="df"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cmd_ps" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lscpu"
        android:id="@+id/cmd_lscpu"
        android:onClick="doCmd"
        android:tag="lscpu"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Secure Access "
        android:id="@+id/use_ssh"
        android:onClick="doSSHCmd"
        android:layout_below="@+id/cmd_free" />

</RelativeLayout>
