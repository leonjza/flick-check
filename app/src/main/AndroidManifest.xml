<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flick.flickcheck" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReadApiServerActivity"
            android:label="@string/title_activity_read_api_server"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flick.flickcheck.MainActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flick.flickcheck.MainActivity" />
        </activity>
        <activity
            android:name=".DoRegisterActivity"
            android:label="@string/title_activity_do_register"
            android:parentActivityName=".RegisterActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flick.flickcheck.RegisterActivity" />
        </activity>
        <activity
            android:name=".CommandActivity"
            android:label="@string/title_activity_command"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flick.flickcheck.MainActivity" />
        </activity>
    </application>

</manifest>
